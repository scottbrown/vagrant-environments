NameVirtualHost *:80

<VirtualHost *:80>
  ServerName <%= @hostname %>
  DocumentRoot <%= @www_dir %>
  DirectoryIndex index.php
  <Directory <%= @www_dir %>>
    AllowOverride All
    Allow from All
  </Directory>
  ErrorLog /var/log/apache2/<%= @hostname %>-error.log
  CustomLog /var/log/apache2/<%= @hostname %>-access.log combined
</VirtualHost>
